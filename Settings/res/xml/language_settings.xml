<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/language_keyboard_settings_title" android:key="language_keyboard_settings"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.flymexx"
  xmlns:cm="http://schemas.android.com/apk/res/cyanogenmod.platform">
    <PreferenceScreen android:title="@string/phone_language" android:key="phone_language" android:fragment="com.android.flymexx.localepicker.LocaleListEditor" />
    <PreferenceScreen android:persistent="false" android:title="@string/spellcheckers_settings_title" android:key="spellcheckers_settings" />
    <PreferenceScreen android:title="@string/user_dict_settings_title" android:key="key_user_dictionary_settings" />
    <PreferenceCategory android:title="@string/keyboard_and_input_methods_category">
        <PreferenceScreen android:title="@string/current_input_method" android:key="current_input_method" />
        <PreferenceScreen android:title="@string/virtual_keyboard_category" android:fragment="com.android.flymexx.inputmethod.VirtualKeyboardFragment" />
        <PreferenceScreen android:title="@string/physical_keyboard_title" android:key="physical_keyboard" android:fragment="com.android.flymexx.inputmethod.PhysicalKeyboardFragment" />
        <cyanogenmod.preference.CMSystemSettingSwitchPreference android:title="@string/ime_switcher_notify" android:key="status_bar_ime_switcher" android:summary="@string/ime_switcher_notify_summary" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/voice_category" android:key="voice_category">
        <PreferenceScreen android:title="@string/tts_settings_title" android:key="tts_settings" android:fragment="com.android.flymexx.tts.TextToSpeechSettings" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pointer_settings_category" android:key="pointer_settings_category">
        <com.android.flymexx.PointerSpeedPreference android:title="@string/pointer_speed" android:key="pointer_speed" android:dialogTitle="@string/pointer_speed" />
        <cyanogenmod.preference.CMSystemSettingSwitchPreference android:persistent="false" android:title="@string/stylus_icon_enabled_title" android:key="stylus_icon_enabled" android:summary="@string/stylus_icon_enabled_summary" android:defaultValue="false" />
        <cyanogenmod.preference.CMSecureSettingSwitchPreference android:title="@string/touchscreen_hovering_title" android:key="feature_touch_hovering" android:summary="@string/touchscreen_hovering_summary" android:defaultValue="false" cm:requiresFeature="cmhardware:FEATURE_TOUCH_HOVERING" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/game_controller_settings_category" android:key="game_controller_settings_category">
        <SwitchPreference android:title="@string/vibrate_input_devices" android:key="vibrate_input_devices" android:summaryOn="@string/vibrate_input_devices_summary" android:summaryOff="@string/vibrate_input_devices_summary" />
    </PreferenceCategory>
</PreferenceScreen>