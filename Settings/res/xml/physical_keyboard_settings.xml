<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/physical_keyboard_title"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/keyboard_assistance_category" android:key="keyboard_assistance_category">
        <SwitchPreference android:title="@string/show_ime" android:key="show_virtual_keyboard_switch" android:summary="@string/show_ime_summary" android:defaultValue="false" />
        <Preference android:title="@string/keyboard_shortcuts_helper" android:key="keyboard_shortcuts_helper" android:summary="@string/keyboard_shortcuts_helper_summary" />
        <SwitchPreference android:persistent="false" android:title="@string/auto_replace" android:key="auto_replace" android:summaryOn="@string/auto_replace_summary" android:summaryOff="@string/auto_replace_summary" />
        <SwitchPreference android:persistent="false" android:title="@string/auto_caps" android:key="auto_caps" android:summaryOn="@string/auto_caps_summary" android:summaryOff="@string/auto_caps_summary" />
        <SwitchPreference android:persistent="false" android:title="@string/auto_punctuate" android:key="auto_punctuate" android:summaryOn="@string/auto_punctuate_summary" android:summaryOff="@string/auto_punctuate_summary" />
    </PreferenceCategory>
</PreferenceScreen>