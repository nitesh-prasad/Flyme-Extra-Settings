<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/radio_controls_title"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.flymexx">
    <SwitchPreference android:title="@string/airplane_mode" android:key="toggle_airplane" android:disableDependentsState="true" />
    <PreferenceScreen android:title="@string/wifi_calling_settings_title" android:key="wifi_calling_settings" android:fragment="com.android.flymexx.WifiCallingSettings" settings:keywords="@string/keywords_wifi_calling" />
    <com.android.flymexxlib.RestrictedPreference android:title="@string/tether_settings_title_all" android:key="tether_settings" android:fragment="com.android.flymexx.TetherSettings" settings:userRestriction="no_config_tethering" settings:useAdminDisabledSummary="true" />
    <com.android.flymexxlib.RestrictedPreference android:title="@string/vpn_settings_title" android:key="vpn_settings" android:fragment="com.android.flymexx.vpn2.VpnSettings" settings:userRestriction="no_config_vpn" settings:useAdminDisabledSummary="true" />
    <com.android.flymexxlib.RestrictedPreference android:title="@string/network_settings_title" android:key="mobile_network_settings" android:dependency="toggle_airplane" settings:userRestriction="no_config_mobile_networks" settings:useAdminDisabledSummary="true" settings:keywords="@string/keywords_more_mobile_networks">
        <intent android:targetPackage="com.android.phone" android:action="android.intent.action.MAIN" android:targetClass="com.android.phone.MobileNetworkSettings" />
    </com.android.flymexxlib.RestrictedPreference>
    <com.android.flymexxlib.RestrictedPreference android:persistent="false" android:title="@string/manage_mobile_plan_title" android:key="manage_mobile_plan" settings:userRestriction="no_config_mobile_networks" settings:useAdminDisabledSummary="true" />
    <com.android.flymexxlib.RestrictedPreference android:title="@string/cell_broadcast_settings" android:key="cell_broadcast_settings" settings:useAdminDisabledSummary="true" />
    <com.android.flymexxlib.RestrictedPreference android:title="@string/wimax_settings" android:key="wimax_settings" settings:userRestriction="no_config_mobile_networks" settings:useAdminDisabledSummary="true">
        <intent android:targetPackage="com.android.flymexx.wimax" android:action="android.intent.action.MAIN" android:targetClass="com.android.flymexx.wimax.WimaxSettings" />
    </com.android.flymexxlib.RestrictedPreference>
    <PreferenceScreen android:title="@string/proxy_settings_title" android:key="proxy_settings" android:fragment="com.android.flymexx.ProxySelector" />
    <com.android.flymexxlib.RestrictedPreference android:title="@string/reset_network_title" android:key="network_reset" android:fragment="com.android.flymexx.ResetNetwork" settings:userRestriction="no_network_reset" settings:useAdminDisabledSummary="true" settings:keywords="@string/keywords_network_reset" />
    <PreferenceCategory android:title="@string/nfc_title_category" android:key="nfc_category_settings">
        <SwitchPreference android:title="@string/nfc_quick_toggle_title" android:key="toggle_nfc" android:summary="@string/nfc_quick_toggle_summary" />
        <com.android.flymexxlib.RestrictedPreference android:title="@string/android_beam_settings_title" android:key="android_beam_settings" android:fragment="com.android.flymexx.nfc.AndroidBeam" />
        <PreferenceScreen android:title="@string/nfc_payment_settings_title" android:key="nfc_payment_settings" android:fragment="com.android.flymexx.nfc.PaymentSettings" />
    </PreferenceCategory>
</PreferenceScreen>